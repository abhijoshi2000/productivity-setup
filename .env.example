# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_ALLOWED_USER_ID=your-telegram-user-id

# Todoist
TODOIST_API_TOKEN=your-todoist-api-token

# Google Calendar (service account)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Comma-separated list of calendar IDs (personal first, then work, etc.)
GOOGLE_CALENDAR_IDS=your-email@gmail.com,work-calendar-id@group.calendar.google.com

# Optional: Webhook mode (leave empty for long polling)
WEBHOOK_URL=
WEBHOOK_PORT=3000

# Daily briefing cron (default: 7:00 AM)
BRIEFING_CRON=0 7 * * *

# Event reminder cron (default: every 5 minutes)
REMINDER_CRON=*/5 * * * *
# How many minutes before an event to send a reminder (default: 15)
REMINDER_MINUTES=15
